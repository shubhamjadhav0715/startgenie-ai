# Backend Environment Variables Template
# Copy this file to .env and fill in your actual values

# ===== APPLICATION SETTINGS =====
APP_NAME=StartGenie AI
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# ===== SERVER CONFIGURATION =====
HOST=0.0.0.0
PORT=8000
RELOAD=True

# ===== SECURITY =====
# Generate a secure secret key: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===== DATABASE =====
# MongoDB Atlas connection string
# Format: mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=startgenie_db

# ===== OPENAI API =====
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# ===== VECTOR DATABASE =====
VECTOR_STORE_TYPE=faiss
FAISS_INDEX_PATH=./data/vector_store/faiss_index
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# ===== DATA SOURCES =====
STARTUP_INDIA_URL=https://www.startupindia.gov.in
DPIIT_URL=https://dpiit.gov.in
INVEST_INDIA_URL=https://www.investindia.gov.in

# ===== CORS SETTINGS =====
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=True
CORS_METHODS=*
CORS_HEADERS=*

# ===== RATE LIMITING =====
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ===== LOGGING =====
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# ===== EXPORT SETTINGS =====
PDF_TEMPLATE_PATH=./templates/pdf
PPT_TEMPLATE_PATH=./templates/ppt
EXPORT_DIR=./exports

# ===== CACHE =====
CACHE_ENABLED=True
CACHE_TTL=3600

# ===== FRONTEND URL =====
FRONTEND_URL=http://localhost:3000
